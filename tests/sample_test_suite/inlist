&bbq

    ! Physcis options
    net_name = 'approx21.net'
    screening_mode = 'chugunov'
    weak_rate_factor = 1

    ! Solver tolerances
    max_steps = 1000000
    eps = 1d-8
    odescal = 1d-10
    stptry = 0


    ! What mode to run
    use_input_file = .false. ! Simply read from file and output burn data
    use_random_sampling =.false. ! Randomly sample inputs
    use_profile=.false. ! Read a profile of (T,Rho) and burn material
    just_write_isos=.true.

    
    write_iso_list = .true.
    iso_list_filename = 'iso.list'

/


&sampling ! For both use_input_file and use_random_sampling

    input_filename = ''

    output_starting_filename = ''
    output_ending_filename = ''

    random_sampling = .false.

    num_samples = -1

    log_time_min = -12 ! log integration time in s
    log_time_max = 0

    log_temp_min = 8 ! log Temperature in K
    log_temp_max = 10

    log_rho_min = 0 ! log density in g/cm^-3
    log_rho_max = 10
    
    log_xa_min = -30 ! log abundance
    log_xa_max = 0

    neut_prot_limit_frac = 0.05 ! Limit abundance of free neut's/prots

    flush_freq = 50 ! How often to force the output to disk

/


&profile ! For use_profile

/


&eos

/
